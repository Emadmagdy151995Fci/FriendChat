<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    >

 <TextView
     android:id="@+id/txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Create account"
     android:textStyle="normal|bold"
     android:textSize="32sp"
     android:textColor="@color/colorPrimary"
     android:layout_centerHorizontal="true"
     />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/register_addphoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/gray"
                android:scaleType="centerCrop"
                android:src="@drawable/addphoto"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your photo"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="15dp"
                >
                <EditText
                    android:id="@+id/register_name"
                    android:layout_width="0dp"
                    android:layout_weight="2.8"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:scrollHorizontally="true"
                    android:hint="Full name......"
                    android:background="@drawable/edittextshape"
                    android:drawableRight="@mipmap/personicon"
                    android:paddingLeft="5dp"

                    />
                <ImageView
                    android:id="@+id/check_name"
                    android:layout_width="0dp"
                    android:layout_weight=".15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/check_true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="15dp"
                >
                <EditText
                    android:id="@+id/register_phone"
                    android:layout_width="0dp"
                    android:layout_weight="2.8"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:scrollHorizontally="true"
                    android:hint="phone number......"
                    android:background="@drawable/edittextshape"
                    android:drawableRight="@mipmap/phone_icon"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/check_phone"
                    android:layout_width="0dp"
                    android:layout_weight=".15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/check_true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="0dp"
                    android:layout_weight="2.8"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="textEmailAddress"
                    android:hint="Enter your email......"
                    android:background="@drawable/edittextshape"
                    android:drawableRight="@mipmap/emailicon"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/check_email"
                    android:layout_width="0dp"
                    android:layout_weight=".15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/check_true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="0dp"
                    android:layout_weight="2.8"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="textPassword"
                    android:hint="Enter your password......"
                    android:background="@drawable/edittextshape"
                    android:drawableRight="@mipmap/passwordicon"
                    android:paddingLeft="5dp"
                    android:maxLength="20"

                    />
                <ImageView
                    android:id="@+id/check_password"
                    android:layout_width="0dp"
                    android:layout_weight=".15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/check_true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/register_signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:padding="20dp"
                android:background="@drawable/buttonshape"
                android:layout_marginTop="30dp"

                />
        </LinearLayout>
</RelativeLayout>
</ScrollView>