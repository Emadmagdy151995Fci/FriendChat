<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.omd.friendlychat.Activities.ChatRoom">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    app:elevation="10dp"
    tools:context="com.example.omd.friendlychat.Activities.ChatRoom"
    android:id="@+id/appBarLayout"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="35dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/index"
            />

            <android.support.v7.widget.Toolbar
                android:id="@+id/chatRoomToolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="name"
                app:titleTextColor="@android:color/white"
                app:subtitle="state"
                app:subtitleTextColor="@android:color/white"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"
                >
            </android.support.v7.widget.Toolbar>

    </LinearLayout>
</android.support.design.widget.AppBarLayout>
<ListView
    android:id="@+id/listview_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/appBarLayout"
    android:layout_above="@+id/linearLayout"
    android:stackFromBottom="true"
    android:scrollbars="none"
    android:divider="@null"
    android:dividerHeight="0dp"
    tools:listitem="@layout/message_out"
    android:clickable="true"
    android:listSelector="@android:color/transparent"
    >

</ListView>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/ChatRoom_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:visibility="visible"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <ImageView
                    android:id="@+id/pickup_image"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="25dp"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/view_Media"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="25dp"
                    android:src="@drawable/content"
                    android:layout_gravity="center"
                    android:rotation="45"
                    />

                <EditText
                    android:id="@+id/message_area"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextshape"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:hint="Type Message"
                    android:layout_gravity="center"
                    android:scrollHorizontally="false"

                    />
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="25dp"
                    android:src="@drawable/microphone"
                    android:layout_gravity="center"
                    />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/sendBtn"
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_gravity="right|center"
                    android:src="@drawable/send"
                    app:backgroundTint="@android:color/transparent"
                    app:borderWidth="0dp"
                    app:elevation="0dp"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/respons_message_chatRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="You can't Reply to this conversation"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>
